<svg width="512" height="512" viewBox="0 0 512 512" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="brandGradient" x1="0" y1="0" x2="512" y2="256" gradientUnits="userSpaceOnUse">
      <stop offset="0%" stop-color="#2DD4BF" />
      <stop offset="100%" stop-color="#3B82F6" />
    </linearGradient>
    <filter id="softGlow" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur stdDeviation="12" result="blur" />
      <feComposite in="SourceGraphic" in2="blur" operator="over" />
    </filter>
  </defs>

  <!-- Fluid Infinity Glasses Shape -->
  <!-- A single continuous stroke that forms two lens-like loops connected by a bridge -->
  <path 
    d="M130 256 
       C 130 170, 230 170, 256 220 
       C 282 170, 382 170, 382 256 
       C 382 342, 282 342, 256 292 
       C 230 342, 130 342, 130 256 Z" 
    stroke="url(#brandGradient)" 
    stroke-width="45" 
    stroke-linecap="round" 
    stock-linejoin="round"
    fill="none" 
    filter="url(#softGlow)"
  />
  
  <!-- "Smart" Accent Dot (The Camera/Sensor) -->
  <circle cx="400" cy="180" r="18" fill="#3B82F6" />
  
</svg>
